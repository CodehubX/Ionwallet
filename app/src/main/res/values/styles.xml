<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>
        <item name="qmui_topbar_height">@dimen/h50</item>
        <item name="actionBarSize">?attr/qmui_topbar_height</item>

        <item name="homeAsUpIndicator">@mipmap/arrow_back_blue</item>
        <item name="actionMenuTextColor">@color/main_blue</item>
        <item name="buttonStyle">@style/buttonStyle</item>
        <item name="editTextBackground">@drawable/abc_edit_text_material</item>
    </style>

    <style name="buttonStyle" parent="Button.Compat">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/txt_mediumsize</item>
        <item name="android:layout_marginLeft">@dimen/h16</item>
        <item name="android:layout_marginRight">@dimen/h16</item>
        <item name="android:background">@drawable/common_button_main</item>
    </style>

    <style name="base_dialog" parent="android:style/Theme.Dialog">
        <!--背景颜色及和透明程度-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--是否去除标题 -->
        <item name="android:windowNoTitle">true</item>
        <!--是否去除边框-->
        <item name="android:windowFrame">@null</item>
        <!--是否浮现在activity之上-->
        <item name="android:windowIsFloating">true</item>
        <!--是否模糊-->
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <!--右往左推出效果-->
    <style name="push_left_in_out" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/push_left_in</item>
        <item name="android:windowExitAnimation">@anim/push_right_out</item>
    </style>

    <style name="MyEditText" parent="Base.Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/blue_top</item>
        <item name="colorControlActivated">@color/blue_top</item>
    </style>
    <style name="MyEditTextNUll" parent="Base.Theme.AppCompat.Light">
        <item name="colorControlNormal">@android:color/transparent</item>
        <item name="colorControlActivated">@android:color/transparent</item>
    </style>

   <style name="common_title">
       <item name="android:layout_width">wrap_content</item>
       <item name="android:layout_height">wrap_content</item>
       <item name="android:layout_centerVertical">true</item>
       <item name="android:layout_marginLeft">@dimen/h16</item>
       <item name="android:textSize">18sp</item>
       <item name="android:textColor">@color/blue_top</item>
   </style>
</resources>
