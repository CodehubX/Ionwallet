<resources>

    <style name="AppTheme" parent="QMUI.Compat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>
        <item name="qmui_topbar_height">@dimen/h50</item>
        <item name="actionBarSize">?attr/qmui_topbar_height</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowAnimationStyle">@style/ActivityAnimation</item>
        <item name="homeAsUpIndicator">@drawable/qmui_icon_topbar_back</item>
        <item name="actionMenuTextColor">@color/white</item>
        <item name="buttonStyle">@style/buttonStyle</item>
        <item name="editTextBackground">@drawable/abc_edit_text_material</item>
    </style>

    <style name="buttonStyle" parent="Button.Compat">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/txt_mediumsize</item>
        <item name="android:layout_marginLeft">@dimen/h16</item>
        <item name="android:layout_marginRight">@dimen/h16</item>
        <item name="android:background">@color/qmui_config_color_blue</item>
    </style>

</resources>
