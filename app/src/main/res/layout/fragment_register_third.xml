<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <include
        android:id="@+id/toolbarlayout"
        layout="@layout/layout_toolbar" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/h16"
        android:layout_marginLeft="@dimen/h16"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/haveAccountTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我已经有了IONCToken账号？"
            android:textColor="@color/library_99"
            android:textSize="@dimen/txt_smallmediumsize" />

        <TextView
            android:id="@+id/loginTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/activity_login_title"
            android:textColor="@color/main_blue"
            android:textSize="@dimen/txt_smallmediumsize" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/headIv"
        android:layout_marginLeft="@dimen/h16"
        android:layout_marginRight="@dimen/h16"
        android:layout_marginTop="@dimen/h80"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/h50">

            <TextView
                android:id="@+id/passwordTv1"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/h60"
                android:background="@color/transparent"
                android:gravity="center_vertical"
                android:text="密码"
                android:textColor="@color/library_66"
                android:textSize="@dimen/txt_mediumsize" />

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/passwordEt1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/h60"
                android:layout_marginLeft="@dimen/h6"
                android:layout_toRightOf="@id/passwordTv1"
                android:background="@color/transparent"
                android:gravity="center_vertical"
                android:inputType="textPassword"
                android:textColor="@color/library_33"
                android:textSize="@dimen/txt_mediumsize" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/h1"
                android:layout_alignParentBottom="true"
                android:background="@color/line" />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/h50">

            <TextView
                android:id="@+id/passwordTv2"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/h60"
                android:background="@color/transparent"
                android:gravity="center_vertical"
                android:text="确认密码"
                android:textColor="@color/library_66"
                android:textSize="@dimen/txt_mediumsize" />

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/passwordEt2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/h60"
                android:layout_marginLeft="@dimen/h6"
                android:layout_toRightOf="@id/passwordTv2"
                android:background="@color/transparent"
                android:gravity="center_vertical"
                android:inputType="textPassword"
                android:textColor="@color/library_33"
                android:textSize="@dimen/txt_mediumsize" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/h1"
                android:layout_alignParentBottom="true"
                android:background="@color/line" />
        </RelativeLayout>


        <Button
            android:id="@+id/submitBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/h20"
            android:enabled="false"
            android:text="@string/sure" />

    </LinearLayout>


</RelativeLayout>