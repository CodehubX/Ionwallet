<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/h5"
    android:background="@drawable/dialog_import_mnemonic"
    android:layout_height="wrap_content">
    <TextView
        android:text="请勿拍照或截屏，谨慎抄写您的助记词！"
        android:gravity="center"
        android:textColor="@color/red"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_gravity="center_horizontal"
        android:textSize="@dimen/title_size"
        android:layout_height="?actionBarSize" />
    <View
        android:layout_width="match_parent"
        android:background="@color/grey"
        android:layout_height="1dp"/>
    <TextView
        android:id="@+id/import_mnemonic_tv"
        android:layout_width="match_parent"
        android:gravity="center|left"
        android:padding="@dimen/dp_10"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:text="424fbbf7dad260c40ce0626adc78c39deae369112dc1757c1b1cd5e183385b1"
