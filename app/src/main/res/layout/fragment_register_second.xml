<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <include
        android:id="@+id/toolbarlayout"
        layout="@layout/layout_toolbar" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/h16"
        android:layout_marginLeft="@dimen/h16"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/haveAccountTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我已经有了IONCToken账号？"
            android:textColor="@color/library_99"
            android:textSize="@dimen/txt_smallmediumsize" />

        <TextView
            android:id="@+id/loginTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/activity_login_title"
            android:textColor="@color/main_blue"
            android:textSize="@dimen/txt_smallmediumsize" />

    </LinearLayout>


    <TextView
        android:id="@+id/tipsTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/headIv"
        android:layout_marginLeft="@dimen/h20"
        android:layout_marginRight="@dimen/h20"
        android:layout_marginTop="@dimen/h130"
        android:gravity="center_horizontal"
        android:textColor="@color/library_66"
        android:textSize="@dimen/textSize_14" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tipsTv">

        <LinearLayout
            android:id="@+id/layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/codeTv1"
                android:layout_width="@dimen/h35"
                android:layout_height="@dimen/h35"
                android:layout_marginRight="@dimen/h10"
                android:background="@drawable/bg_et_reg_code"
                android:gravity="center"
                android:inputType="number"
                android:lines="1"
                android:maxLines="1"
                />

            <TextView
                android:id="@+id/codeTv2"
                android:layout_width="@dimen/h35"
                android:layout_height="@dimen/h35"
                android:layout_marginRight="@dimen/h10"
                android:background="@drawable/bg_et_reg_code"
                android:gravity="center"
                android:inputType="number"
                android:lines="1"
                android:maxLines="1" />

            <TextView
                android:id="@+id/codeTv3"
                android:layout_width="@dimen/h35"
                android:layout_height="@dimen/h35"
                android:layout_marginRight="@dimen/h10"
                android:background="@drawable/bg_et_reg_code"
                android:gravity="center"
                android:inputType="number"
                android:lines="1"
                android:maxLines="1" />

            <TextView
                android:id="@+id/codeTv4"
                android:layout_width="@dimen/h35"
                android:layout_height="@dimen/h35"
                android:background="@drawable/bg_et_reg_code"
                android:gravity="center"
                android:inputType="number"
                android:lines="1"
                android:maxLines="1" />

        </LinearLayout>

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/hideEt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/layout"
            android:layout_alignLeft="@+id/layout"
            android:layout_alignRight="@+id/layout"
            android:layout_alignTop="@+id/layout"
            android:layout_weight="1"
            android:background="#00000000"
            android:cursorVisible="false"
            android:ems="10"
            android:inputType="number"
            android:maxLength="4"
            android:textColor="#00000000" />
    </RelativeLayout>


</RelativeLayout>