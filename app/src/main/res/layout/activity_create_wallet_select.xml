<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/toolbarlayout"
        layout="@layout/layout_toolbar"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbarlayout">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerInParent="true"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="IONCToKen"
                android:textColor="@color/library_33"
                android:textSize="@dimen/txt_largesize"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="分布式智能数字钱包"
                android:textColor="@color/library_33"
                android:textSize="@dimen/txt_largesize"
                android:layout_marginTop="@dimen/h10"/>


            <Button
                android:id="@+id/createBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="创建钱包"
                android:layout_marginLeft="@dimen/bga_adapter_vertical_margin"
                android:layout_marginRight="@dimen/bga_adapter_vertical_margin"
                android:layout_marginTop="@dimen/bga_adapter_vertical_margin"/>

            <Button
                android:id="@+id/importBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="导入钱包"
                android:layout_marginLeft="@dimen/bga_adapter_vertical_margin"
                android:layout_marginRight="@dimen/bga_adapter_vertical_margin"
                android:layout_marginTop="@dimen/bga_adapter_vertical_margin"/>

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>