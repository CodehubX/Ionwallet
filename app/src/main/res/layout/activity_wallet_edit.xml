<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/notify_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="@color/azure"
        android:orientation="vertical">

        <TextView
            android:id="@+id/notify_title_1"
            android:layout_width="match_parent"
            android:layout_height="24sp"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:text="800.1" />

        <TextView
            android:id="@+id/notify_title_2"
            android:layout_width="match_parent"
            android:layout_height="24sp"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:text="@string/text_wallet_address" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/secan_button"
                android:layout_width="24sp"
                android:layout_height="24sp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10sp"
                android:background="@color/black" />

            <TextView
                android:id="@+id/privatekey"
                android:layout_width="wrap_content"
                android:layout_height="64sp"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@id/secan_button"
                android:text="eweasraeraewarearaeraer" />


        </RelativeLayout>


    </LinearLayout>


    <LinearLayout
        android:id="@+id/form_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/notify_layout"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:layout_marginTop="10sp"
        android:orientation="vertical">


        <EditText
            android:id="@+id/wallet_name"
            android:layout_width="match_parent"
            android:layout_height="56sp"
            android:hint="@string/text_wallet_name"></EditText>

        <view
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/black"></view>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginRight="10sp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/go_icon1"
                android:layout_width="24sp"
                android:layout_height="24sp"

                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@color/black" />

            <TextView
                android:id="@+id/editpass_title"
                android:layout_width="wrap_content"
                android:layout_height="32sp"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@id/go_icon1"
                android:gravity="center_vertical"
                android:text="@string/text_edit_pass" />


        </RelativeLayout>

        <view
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/black"></view>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginRight="10sp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/go_icon2"
                android:layout_width="24sp"
                android:layout_height="24sp"

                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@color/black" />

            <TextView
                android:id="@+id/output_title"
                android:layout_width="wrap_content"
                android:layout_height="32sp"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@id/go_icon2"
                android:gravity="center_vertical"
                android:text="@string/text_output_privatekey" />


        </RelativeLayout>

        <view
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/black"></view>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <Button
            android:id="@+id/nextbutton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="@string/act_wallet_edit_del" />


    </RelativeLayout>


</LinearLayout>